<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/agroecologicobackground"
    tools:context=".CreateMarketStallActivity">

    <EditText
        android:id="@+id/etCellphoneMarketStall"
        android:layout_width="310dp"
        android:layout_height="48dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="53dp"
        android:ems="10"
        android:fontFamily="@font/baloo_thambi"
        android:hint="Ingrese el telefono del puesto"
        android:inputType="textPersonName"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etPasswordMarketStall" />

    <EditText
        android:id="@+id/etUsetIdentification"
        android:layout_width="310dp"
        android:layout_height="48dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="53dp"
        android:ems="10"
        android:fontFamily="@font/baloo_thambi"
        android:hint="Ingrese la cedula del vendedor"
        android:inputType="textPersonName"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etMarketStallName" />

    <EditText
        android:id="@+id/etMarketStallName"
        android:layout_width="310dp"
        android:layout_height="48dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="53dp"
        android:ems="10"
        android:fontFamily="@font/baloo_thambi"
        android:hint="Ingrese el nombre del puesto"
        android:inputType="textPersonName"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etEmailMarketStall"
        android:layout_width="310dp"
        android:layout_height="48dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="53dp"
        android:ems="10"
        android:fontFamily="@font/baloo_thambi"
        android:hint="Ingrese el correo electrónico "
        android:inputType="textPersonName"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etCellphoneMarketStall" />

    <EditText
        android:id="@+id/etPasswordMarketStall"
        android:layout_width="310dp"
        android:layout_height="48dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="53dp"
        android:ems="10"
        android:fontFamily="@font/baloo_thambi"
        android:hint="Ingrese la contraseña del puesto"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etUsetIdentification" />

    <Button
        android:id="@+id/btnCreateMarketStall"
        android:layout_width="152dp"
        android:layout_height="59dp"
        android:layout_marginStart="131dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="132dp"
        android:layout_marginBottom="59dp"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/baloo_thambi"
        android:text="Crear puesto"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etEmailMarketStall" />

    <TextView
        android:id="@+id/tvCreateMarketStall"
        android:layout_width="258dp"
        android:layout_height="58dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="115dp"
        android:layout_marginEnd="77dp"
        android:fontFamily="@font/baloo_thambi"
        android:text="Puesto de venta"
        android:textColor="@color/black"
        android:textSize="80px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>